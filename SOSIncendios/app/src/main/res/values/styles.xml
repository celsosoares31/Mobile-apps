<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextInputEditText" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnSurface">@color/gradientStart</item>
    </style>

    <style name="MyTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="boxStrokeColor">@color/gradientEnd</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/gradientStart</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
<style name="ThemeOverlay.AppCompat.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textSize">80sp</item>
    <item name="iconTint">@color/white</item>
</style>
    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/gradientStart</item>
        <item name="colorOnSurface">@color/gradientEnd</item>
        <item name="colorError">@color/black</item>
    </style>

    <style name="MyTitleText">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:textColor">@color/gradientStart</item>
    </style>
</resources>